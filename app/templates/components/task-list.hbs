{{#if tasks.length}}
  {{#if canToggle}}
    <input type="checkbox" id="toggle-all" checked={{allCompleted}} onchange={{action "toggleAll"}}>
  {{/if}}
  <ul id="task-list" class="task-list">
    {{#each tasks as |task|}}
      {{task-item task=task onStartEdit=(action "disableToggle") onEndEdit=(action "enableToggle")}}
    {{/each}}
  </ul>
{{/if}}